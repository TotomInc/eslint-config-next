{
  "name": "@totominc/eslint-config-next",
  "type": "module",
  "version": "1.2.4",
  "description": "Enhanced ESLint config for Next.js projects.",
  "author": "Thomas Cazade <cazade.thomas@gmail.com>",
  "license": "GPL-3",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup index.ts --format esm,cjs --clean --dts",
    "dev": "tsup index.ts --format esm,cjs --watch",
    "debug-config": "npx @eslint/config-inspector --open false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "eslint": "^9.37.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "7.2.0",
    "@eslint-react/eslint-plugin": "2.8.4",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-hooks-extra": "2.8.4",
    "eslint-plugin-react-refresh": "0.4.26",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2"
  },
  "devDependencies": {
    "@types/eslint-plugin-jsx-a11y": "6.10.1",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "eslint": "9.39.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tsup": "8.5.1",
    "typescript": "5.9.3"
  }
}
