{
  "name": "@totominc/eslint-config-next",
  "type": "module",
  "version": "1.0.0-beta.12",
  "description": "Enhanced ESLint config for Next.js projects.",
  "author": "Thomas Cazade <cazade.thomas@gmail.com>",
  "license": "GPL-3",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup index.ts --format esm,cjs --clean --dts",
    "dev": "tsup index.ts --format esm,cjs --watch",
    "debug-config": "npx @eslint/config-inspector --open false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "eslint": "^8.57.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "2.27.3",
    "@eslint-react/eslint-plugin": "1.12.2",
    "@eslint/eslintrc": "3.1.0",
    "@next/eslint-plugin-next": "14.2.7",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-promise": "6.6.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.11",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.6"
  },
  "devDependencies": {
    "@types/eslint__eslintrc": "2.1.2",
    "@types/react": "18.3.4",
    "@types/react-dom": "18.3.0",
    "eslint": "8.57.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tsup": "8.2.4",
    "typescript": "5.5.4"
  }
}
