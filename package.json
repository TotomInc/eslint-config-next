{
  "name": "@totominc/eslint-config-next",
  "type": "module",
  "version": "1.0.0-beta.16",
  "description": "Enhanced ESLint config for Next.js projects.",
  "author": "Thomas Cazade <cazade.thomas@gmail.com>",
  "license": "GPL-3",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup index.ts --format esm,cjs --clean --dts",
    "dev": "tsup index.ts --format esm,cjs --watch",
    "debug-config": "npx @eslint/config-inspector --open false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "eslint": "9.18.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "3.16.0",
    "@eslint-react/eslint-plugin": "1.24.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "0.4.18",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "0.6.10"
  },
  "devDependencies": {
    "@types/eslint-plugin-jsx-a11y": "6.10.0",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.3",
    "eslint": "9.18.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tsup": "8.3.5",
    "typescript": "5.7.3"
  }
}
